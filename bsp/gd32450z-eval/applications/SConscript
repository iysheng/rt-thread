Import('RTT_ROOT')
Import('rtconfig')
from building import *

cwd     = os.path.join(str(Dir('#')), 'applications')
src	= Glob('main.c')

CPPPATH = [cwd, str(Dir('#'))]

# add can support
if GetDepend('BSP_USING_CAN_COMM'):
    src += ['can_comm.c']

# add encoder backend support
if GetDepend('BSP_USING_ENCODER'):
    src += ['encoder_thread.c']

group = DefineGroup('Applications', src, depend = [''], CPPPATH = CPPPATH)

Return('group')
